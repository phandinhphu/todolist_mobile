<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <TextView
        android:id="@+id/tvWidgetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Tasks"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/tvTaskCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hôm nay: 0 task"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp" />

    <!-- Task 1 -->
    <LinearLayout
        android:id="@+id/layoutTask1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/task_item_background"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTask1Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvTask1Deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#FF5722"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Task 2 -->
    <LinearLayout
        android:id="@+id/layoutTask2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/task_item_background"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTask2Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvTask2Deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#FF5722"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Task 3 -->
    <LinearLayout
        android:id="@+id/layoutTask3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/task_item_background"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTask3Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvTask3Deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#FF5722"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Empty state -->
    <TextView
        android:id="@+id/tvEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không có task nào hôm nay"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>
